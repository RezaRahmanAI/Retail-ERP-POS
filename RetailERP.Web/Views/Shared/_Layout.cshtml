<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RetailERP</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#13ec80",
                        "background-light": "#f6f8f7",
                        "background-dark": "#102219",
                        "foreground-light": "#0d1b14",
                        "foreground-dark": "#e7f3ed",
                        "card-light": "#ffffff",
                        "card-dark": "#182c22",
                        "border-light": "#e7f3ed",
                        "border-dark": "#2a4035",
                        "subtle-light": "#4c9a73",
                        "subtle-dark": "#a3d3ba",
                        "active-light": "#e7f3ed",
                        "active-dark": "#2a4035",
                    },
                    fontFamily: {
                        display: ["Manrope", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                        lg: "0.75rem",
                        xl: "1rem",
                        full: "9999px",
                    },
                },
            },
        };
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings:
                'FILL' 0,
                'wght' 400,
                'GRAD' 0,
                'opsz' 24
        }
    </style>
</head>
<body class="font-display bg-background-light text-foreground-light">
    <div class="min-h-screen flex flex-col">
        <header class="sticky top-0 z-10 border-b border-border-light/60 bg-background-light/90 backdrop-blur">
            <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
                <a class="flex items-center gap-3 text-lg font-extrabold tracking-tight" asp-controller="Home" asp-action="Index">
                    <span class="material-symbols-outlined text-primary">store</span>
                    <span>RetailERP</span>
                </a>
                <nav class="flex items-center gap-3 text-sm font-semibold">
                    <a class="rounded-full px-4 py-2 text-foreground-light transition hover:bg-active-light" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="rounded-full px-4 py-2 text-foreground-light transition hover:bg-active-light" asp-controller="Auth" asp-action="Dashboard">Dashboard</a>
                    <a class="rounded-full bg-primary px-4 py-2 text-foreground-dark shadow-sm transition hover:opacity-90" asp-controller="Auth" asp-action="Login">Log in</a>
                </nav>
            </div>
        </header>

        <main class="flex-1">
            @RenderBody()
        </main>

        <footer class="border-t border-border-light bg-card-light">
            <div class="mx-auto flex max-w-6xl flex-col gap-2 px-6 py-6 text-sm text-subtle-light sm:flex-row sm:items-center sm:justify-between">
                <div class="font-semibold">RetailERP</div>
                <p class="text-subtle-light">Streamlined retail, POS, and ERP experiences.</p>
            </div>
        </footer>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
